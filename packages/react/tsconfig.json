{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": ["es2023", "DOM"],
    "moduleDetection": "force",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@twist-toast/core": ["../core/src/index.ts"]
    },
    "resolveJsonModule": true,
    "types": [],
    "declaration": true,
    "emitDeclarationOnly": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
